<% layout('layouts/rapRoom') %> 
<h1>Welcome to <%= owner.toUpperCase() %>'s  Room</h1> 
<h2>Description: <%= room.description %> </h2> 

<div class="container">
  <div class="row">
    <div class="col-9">col-9</div>
    <div class="col-3">
        <div class="card border-info mb-3" style="max-width: 20rem;">
        <div class="card-header"></div>
        <div class="card-body">
            <h4 class="card-title">Chat</h4>
            <div id="scroll-div" class="overflow-auto" style="width: 100%; height: 500px;">
                <ul id="messages" class="text-info"></ul>
            </div>
        </div>
        </div>

    </div>
  </div>
</div>

<form id="form" action="">
    <input id="input" autocomplete="off" required/>
    <button>Send</button>
</form>

